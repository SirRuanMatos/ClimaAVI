@model ClimaAvi.Models.User

@{ Layout = null;}
@{ ViewBag.title = "Login";}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Projeto sistema web - Login</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-6 col-lg-6 col-md-6">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bem vindo!</h1>
                                    </div>                                    
                                    <form class="user">
                                        <!--Chama o metodo para validar a senha -->
                                        <div class="form-group">
                                            <input id="email" type="email" class="form-control form-control-user"  placeholder="Informar e-mail">
                                        </div>
                                        <div class="form-group">
                                            <input id="password" type="password" class="form-control form-control-user" placeholder="Informar senha">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Lembre-me</label>
                                            </div>

                                            <label id="msg_erro" class="label label-danger"></label>

                                        </div>
                                        <input id="login" type="button" class="btn btn-primary btn-user btn-block" value=" Login" />
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/Usuario/ForgotPassord">Esqueci a senha!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/Usuario/Register">Criar uma conta!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

    <script src="~/Scripts/jquery-3.5.0.js"></script>
    <script type="text/javascript">
        $(document).ready(function ()
        {
            $("#login").click(function () {
                var url = "/Usuario/Validation_Login";

                var userTemp = {
                    "email": $("#email").val(),
                    "password": $("#password").val()
                }

                $.post(url, userTemp, RetornoGravacao);
            });

            function RetornoGravacao(retorno)
            {
                if (retorno.MensagemErro) {
                    $("#msg_erro").html(retorno.MensagemTexto);
                }
                else {
                    $(location).attr('href','/Home/Index');
                }
            }
        });
    </script>
</body >

</html >

