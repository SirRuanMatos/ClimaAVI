@model ClimaAvi.Models.User
    @{
        Layout = null;
    }
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>


    <!DOCTYPE html>
    <html lang="en">

    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>SB Admin 2 - Register</title>

        <!-- Custom fonts for this template-->
        <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

        <!-- Custom styles for this template-->
        <link href="/css/sb-admin-2.min.css" rel="stylesheet">

    </head>

    <body class="bg-gradient-primary">
        <div class="container" style="width: 40vw;">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Criar uma Conta!</h1>
                                </div>
                                @using (Html.BeginForm("Validation_Create_User", "", null, FormMethod.Post))
                                {
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <label for="inputName">Nome</label>
                                            @*<input type="text" class="editor -label" name="userTemp.Name" placeholder="Nome">*@
                                            @Html.TextBoxFor(model => Model.Name)
                                            @Html.ValidationMessageFor(model => Model.Name)
                                        </div>

                                        <div class="col-sm-6">
                                            <label for="inputLastName">Sobrenome</label>
                                            @*<input type="text" class="editor -label" name="userTemp.LastName" placeholder="Sobrenome">*@
                                            @Html.TextBoxFor(model => Model.LastName)
                                            @Html.ValidationMessageFor(model => Model.LastName)
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail">E-mail</label>
                                        @*<input type="email" class="editor -label" name="userTemp.Email" placeholder="Email">*@
                                        @Html.TextBoxFor(model => Model.Email)
                                        @Html.ValidationMessageFor(model => Model.Email)
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <label for="inputPassword">Senha</label>
                                            @*<input type="password" class="editor -label" name="userTemp.Password" placeholder="Senha">*@
                                            @Html.TextBoxFor(model => Model.Password)
                                            @Html.ValidationMessageFor(model => Model.Password)
                                        </div>
                                        @Html.ValidationMessage("userTemp.CadastroErrado", new { @class = "text-danger" })
                                                                                <!-- Nested Row within Card Body
                                            <div class="col-sm-6">
                                                <input type="password" class="form-control form-control-user" name="userTemp." placeholder="Repeat Password">
                                            </div>
                                            <!-- Nested Row within Card Body -->

                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">Criar uma conta</button>

                                   
                                }
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="/Usuario/ForgotPassord">Esqueci minha Senha?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="/Usuario/Login">Já tenho uma Conta! Login!</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Bootstrap core JavaScript-->
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="/js/sb-admin-2.min.js"></script>

    </body>

</html>
